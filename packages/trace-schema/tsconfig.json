{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "build",
    "declarationMap": true,
    "declaration": true,
    "rootDir": "./src/",
    "baseUrl": ".",
    "paths": {
      "@graphql-debugger/types": ["../types"],
      "@graphql-debugger/utils": ["../utils"]
    }
  },
  "references": [{ "path": "../types" }, { "path": "../utils" }],
  "exclude": ["tests/"],
  "include": ["src/**/*"]
}
