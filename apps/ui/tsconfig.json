{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declarationMap": true,
    "declaration": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "build",
    "noEmit": false,
    "paths": {
      "@graphql-debugger/time": ["../../packages/time"],
      "@graphql-debugger/types": ["../../packages/types"]
    }
  },
  "references": [
    { "path": "../../packages/time" },
    { "path": "../../packages/types" }
  ],
  "include": ["src/**/*"]
}
